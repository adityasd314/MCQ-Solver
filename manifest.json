{
  "manifest_version": 3,
  "name": "MCQ Auto Solver",
  "version": "1.0",
  "description": "Automatically solve MCQs using Gemini AI",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "notifications"
  ],
  
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://storage.googleapis.com/*",
    "https://onlinecourses.nptel.ac.in/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["html2canvas.min.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "MCQ Solver"
  },
  
  "commands": {
    "solve-mcq": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Solve MCQ questions on current page"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["<all_urls>"]
    }
  ]
}